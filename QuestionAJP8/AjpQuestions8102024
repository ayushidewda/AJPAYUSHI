//Wap to check whether  a character is in lower case or upper case.
import java.util.*;
class checkLetter{
     public static void main(String[] args){
       Scanner sc = new Scanner(System.in); 
     System.out.print("Enter a character: ");
        char ch = sc.next().charAt(0);
      String result =(Character.isUpperCase(ch))?"uppercase":"lowercase";
     System.out.println(result);
}
}

//5. Wap to check whether a number is negative or positive or zero.
import java.util.*;
class checkNumber{
     public static void main(String[] args){
       Scanner sc = new Scanner(System.in); 
     System.out.print("Enter a number: ");
     int number = sc.nextInt();
 System.out.println((number > 0) ? "Positive" :
                        (number < 0) ? "Negative" : "Zero");
}
}




// Wap to print pass or fail according to marks.
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter your marks: ");
        int marks = sc.nextInt();  
     System.out.println((marks >= 33) ? "Pass" : "Fail";);
  }
}


//Wap to check whether a character is vowel or not.
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter char: ");
         char ch = sc.next().toLowerCase().charAt(0);
         System.out.println(ch=='a'|| ch=='e' || ch =='i' || ch =='o' || ch=='u')?"vowel" : "not a vowel";);
}
}  

//Wap to check whether a number is even or odd.
